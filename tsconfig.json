{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@schema/*": ["src/schema/*"],
      "@stores/*": ["src/stores/*"]
    }
  }
}
